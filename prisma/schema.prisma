generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id String @id @default(uuid())

  username String
  email    String
  password String

  avatar     String?
  created_at DateTime @default(now())
  updated_at DateTime 

  is_active     Boolean  @default(false)
  validate_totp DateTime @default(now())

  @@map("members")
}
