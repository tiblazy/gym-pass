{
  "name": "gym-pass",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tiblazy/gym-pass.git",
  "author": "tiblazy <hauntedapply@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start:dev": "NODE_ENV=development tsx watch src/server.ts",
    "build": "tsup src !src/**/*.spec.ts !src/**/test/**/* --out-dir build --publicDir src/docs",
    "prisma": "prisma generate && prisma migrate deploy",
    "start:prod": "cross-env NODE_ENV=production node build/server.js",
    "test": "NODE_ENV=development JWT_SECRET='' COOKIE_NAME='' DATABASE_URL='' CLOUDINARY_URL='' vitest run --dir src/use-cases",
    "test:watch": "vitest --dir src/use-cases",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:create-prisma-environment": "yarn link gym-pass/prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "yarn link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir src/http",
    "test:e2e:watch": "vitest --dir src/http",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.1",
    "@fastify/cookie": "^8.3.0",
    "@fastify/jwt": "^7.0.0",
    "@fastify/swagger": "^8.5.1",
    "@fastify/swagger-ui": "^1.8.1",
    "@prisma/client": "^4.14.1",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "fastify": "^4.17.0",
    "fastify-cloudinary": "^1.0.5",
    "fastify-mailer": "^2.3.1",
    "fastify-multer": "^2.0.3",
    "fastify-totp": "^1.0.0",
    "minify": "^10.2.0",
    "nodemailer": "^6.9.2",
    "tsc": "^2.0.4",
    "yarn-run-all": "^3.1.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^1.2.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.2.3",
    "@types/supertest": "^2.0.12",
    "@vitest/coverage-c8": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "eslint-plugin-vitest-globals": "^1.3.1",
    "prisma": "^4.14.1",
    "supertest": "^6.3.3",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1"
  }
}
